<div class='container'>
  <h2 class="white-text">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field white-text">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
    </div>

    <div class="field white-text">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="center-align">
      <div class="actions">
        <%= f.submit "Log in", class: "waves-effect waves-light red darken-4 btn-large" %>
      </div>
  <% end %>
  <br/>
  <%= render "devise/shared/links" %>
    </div>
</div>

